# Speech-to-Text Transcriber Configuration
# Copy this file to .env and update with your values

# RSS feed URL (required for RSS mode)
STT_RSS_URL=https://example.com/rss

# Directory paths
STT_DOWNLOAD_DIR=./downloads
STT_OUTPUT_DIR=./transcripts

# Processing options
STT_DATE_RANGE=today  # today, yesterday, last-week, latest
STT_OUTPUT_FORMAT=txt  # txt, markdown, json
STT_WHISPER_MODEL=base  # tiny, base, small, medium, large
STT_MAX_EPISODES=10

# Audio processing
STT_CHUNK_SIZE_MB=50
STT_OVERLAP_SECONDS=15

# OpenAI API Configuration (optional)
# Get your API key from: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=sk-your-api-key-here

# OpenAI API options
STT_USE_OPENAI_API=false  # Set to true to force OpenAI API usage
STT_OPENAI_FALLBACK=true  # Set to false to disable OpenAI fallback