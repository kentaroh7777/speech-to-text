# OpenAI API settings (optional - for cloud transcription)
OPENAI_API_KEY=your_openai_api_key_here
STT_USE_OPENAI_API=false
STT_OPENAI_FALLBACK=true

# Audio source settings
STT_RSS_URL=https://example.com/podcast.rss
STT_LOCAL_DIR=
STT_X_SPACES_URL=

# Output settings
STT_DOWNLOAD_DIR=./downloads
STT_OUTPUT_DIR=./transcripts
STT_OUTPUT_FORMAT=json

# Processing settings
STT_WHISPER_MODEL=base
STT_DATE_RANGE=latest
STT_MAX_EPISODES=5
STT_CHUNK_SIZE_MB=25
STT_OVERLAP_SECONDS=15

# Metadata settings
STT_AUTHOR=
STT_CONTACT=

# File management
STT_DELETE_AUDIO=false